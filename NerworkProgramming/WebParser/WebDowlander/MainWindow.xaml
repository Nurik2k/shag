<Window x:Class="WebDowlander.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebDowlander"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UrlTextBox" Margin="10" VerticalAlignment="Top" >Content="Enter URL...</TextBox>
        <TextBox x:Name="ProxyTextBox" Margin="10,50,10,10" VerticalAlignment="Top"  >Proxy Server (Optional)</TextBox>
        <Button x:Name="DownloadButton" Content="Download" Click="DownloadButton_Click" Margin="10,90,10,10" VerticalAlignment="Top" />
        <ListBox  x:Name="DownloadedFilesListBox" Margin="10,130,10,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
