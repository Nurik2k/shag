<Window x:Class="TCPCient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPCient"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Button x:Name="btnOpenFile" Height="30" Width="100" Click="btnOpenFile_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" >Open file</Button>
        <TextBox HorizontalAlignment="Center" VerticalAlignment="Center"  Width="357" Name="tbxFile"></TextBox>
        <Button x:Name="btnSendFile" Content="Send"  Height="30" Width="100" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="btnSendFile_Click"></Button>
    </Grid>
</Window>
