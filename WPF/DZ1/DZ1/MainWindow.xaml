<Window x:Class="DZ1.MainWindow"
        x:Name="DZ1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DZ1"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="450">
    <Grid>
        <StackPanel>
        <Label  x:Name="labelTitle">Title</Label>
        <Label  x:Name="labelDescription">Description</Label>
        <Label  x:Name="labelManagingEditor">ManagingEditor</Label>
        <Label  x:Name="labelGenerator">Generator</Label>
        <Label  x:Name="labelPubdate">Pubdate</Label>
            
            
        </StackPanel>
        <DockPanel LastChildFill="False" VerticalAlignment="Bottom">
            <Button HorizontalAlignment="Left" Margin="10"  x:Name="CreateXML" Content="Create XML" Click="CreateXML_Click"/>
            <Button  x:Name="btnInfo" Margin="10" Content="Get Information" Click="btnInfo_Click"/>
        </DockPanel>
    </Grid>
</Window>
