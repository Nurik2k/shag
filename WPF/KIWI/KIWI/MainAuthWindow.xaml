<Window x:Class="KIWI.MainAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KIWI"
        mc:Ignorable="d"
        Title="MainAuthWindow" Height="450" Width="860">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top" Height="20">
            <MenuItem Header="File">
                <MenuItem Header="OperatorList" x:Name="miOperatorList" Click="miOperatorList_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Add operator" x:Name="miAddOperator" Click="miAddOperator_Click"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="Close" x:Name="miClose" Click="miClose_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <Label DockPanel.Dock="Bottom"></Label>
        <StackPanel>
            <Frame x:Name="frameMain"/>
        </StackPanel>
    </DockPanel>
</Window>
