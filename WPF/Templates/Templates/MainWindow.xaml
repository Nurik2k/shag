        <TabControl >
            <TabItem Style="{StaticResource BigFontTabItem}" Header="My test header">
            <StackPanel>
                <Label Content="00001"/>
            </StackPanel>
            </TabItem>
            <TabItem Header="Tab 2" Style="{StaticResource BigFontTabItemMulti}">
                <StackPanel Margin="20">
                    <Button Height="30" Width="200" Style="{StaticResource BigFontButtonStyle}" Content="Bitch"></Button>
                </StackPanel> 
            </TabItem>
            <TabItem Header="Tab 3">
                <StackPanel>
                    <CheckBox x:Name="chBox1" Content="Disabled"/>
                    <Button x:Name="btnCh" Content="кнопка" Style="{StaticResource ButtonDataTrigger}"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
